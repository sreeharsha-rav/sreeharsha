---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"

const styles = {
  activeLink: "inline-block text-black font-medium hover:text-gray-600 active:text-blue-600 underline",
  inactiveLink: "inline-block text-gray-600 hover:text-gray-600",
};
---
<nav
  class="relative max-w-7xl w-full flex flex-wrap basis-full items-center px-4 md:px-6 md:px-8 mx-auto"
>
  <!-- Collapse -->
  <div
    id="hs-navbar-hcail"
    class="hs-collapse hidden overflow-hidden transition-all duration-300 basis-full grow md:block md:w-auto md:basis-auto"
    aria-labelledby="hs-navbar-hcail-collapse"
  >
    <div
      class="flex flex-col gap-y-4 gap-x-0 mt-5 md:flex-row md:justify-center md:items-center md:gap-y-0 md:gap-x-7 md:mt-0"
    >
      <div>
        <a
          class={currentPath === "" ? styles.activeLink : styles.inactiveLink}
          href="/"
          data-astro-prefetch>Home</a
        >
      </div>
      <div>
        <a
          class={currentPath === "about" ? styles.activeLink : styles.inactiveLink}
          href="/about"
          data-astro-prefetch>About</a
        >
      </div>
      <div>
        <a
          class={currentPath === "projects" ? styles.activeLink : styles.inactiveLink}
          href="/projects"
          data-astro-prefetch="">Projects</a
        >
      </div>
      <div>
        <a
          class={currentPath === "contact" ? styles.activeLink : styles.inactiveLink}
          href="/contact"
          data-astro-prefetch="">Contact</a
        >
      </div>
    </div>
  </div>
  <!-- End Collapse -->
</nav>
